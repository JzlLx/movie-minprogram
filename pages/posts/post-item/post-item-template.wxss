
.post-author-date{
  margin:10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
 /* vertical-align: middle; */
}
.post-date{
  margin-left: 20rpx;
 /* vertical-align: middle; */
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  color:#666;
  letter-spacing: 2rpx; 
  margin: 0 20rpx 20rpx 20rpx;
  padding-bottom: 10rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-like-image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}
.post-like-font{
  margin-right: 40rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  border-top: #ededed 1px solid;
  border-bottom: #ededed 1px solid;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 10rpx;
}